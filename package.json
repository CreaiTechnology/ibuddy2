{
  "name": "ibuddy2",
  "version": "1.0.0",
  "description": "ibuddy2 microservices platform",
  "scripts": {
    "start:dev": "node tools/start-dev.js",
    "start:api-gateway": "cd api-gateway && npm run dev",
    "start:core-service": "cd core-service && npm run dev",
    "start:ai-service": "cd ai-service && npm run dev",
    "start:client": "cd client && npm start",
    "install:all": "npm install && cd api-gateway && npm install && cd ../core-service && npm install && cd ../ai-service && npm install && cd ../client && npm install",
    "test": "npm run test:api-gateway && npm run test:core-service && npm run test:ai-service",
    "test:api-gateway": "cd api-gateway && npm test",
    "test:core-service": "cd core-service && npm test",
    "test:ai-service": "cd ai-service && npm test",
    "lint": "npm run lint:api-gateway && npm run lint:core-service && npm run lint:ai-service && npm run lint:client",
    "lint:api-gateway": "cd api-gateway && npm run lint",
    "lint:core-service": "cd core-service && npm run lint",
    "lint:ai-service": "cd ai-service && npm run lint",
    "lint:client": "cd client && npm run lint"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true,
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mui/icons-material": "^7.1.0",
    "@mui/material": "^7.1.0",
    "@reduxjs/toolkit": "^2.8.1",
    "axios": "^1.9.0",
    "cross-env": "^7.0.3",
    "framer-motion": "^12.10.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.5.3",
    "styled-components": "^6.1.18"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/node": "^22.15.16",
    "@types/react": "^19.1.3",
    "@types/react-redux": "^7.1.34",
    "@types/react-router-dom": "^5.3.3",
    "typescript": "^5.8.3"
  }
}
